
<%- include('partials/header') %>

<div class="allblogHeading" style=" text-align: center;
font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
font-size: 4rem;
"> <h1>Comments</h1></div>

    <div class="comments" style="max-height: 900px;
    overflow-y: auto;
    margin-bottom: 2rem; font-size: 3rem; padding-left: 1rem;">
    
    <ul>
        <% comments.forEach(function(comment) { %>
            <li>
              <h3><%= comment.content %></h3>
              
            </li>
          <% }); %>
    </ul>
</div>
<div>
    <form class='form' action="/comments" method="POST" style="text-align: center;">
        <input class="input" type="text" placeholder="Comment" name="content" autocomplete="off" style="width: 700px;
        height: 5rem;
        font-size: 3rem;
        border-color: black;
        " />
        <input type="hidden" name="blogId" value="<%= blogId %>" style="width: 700px;
        height: 5rem;
        font-size: 3rem;
        border-color: black;
        ">
        <button style="height: 4rem;
        width: 300px;
        font-size: 2.5rem; margin-top: 2rem;" type="submit" class="btn btn-dark btn-lg enter button">Comment</button>
      </form>
</div>
<div style="text-align: center;">
<a class="btn btn-light btn-lg logout" href="/allblogs"  ><button style="height: 4rem;
  width: 300px;
  font-size: 2.5rem; margin-top: 2rem;"> Back </button> </a>
</div>

  </body>
</html>
